# syntax=docker/dockerfile:1

FROM --platform=$TARGETPLATFORM ubuntu:22.04

RUN apt-get update && apt-get install -y wget

WORKDIR /app

ENV DB_SCHEMA_PATH=./migrations
COPY ./database/migrations $DB_SCHEMAPATH
COPY ./entrypoint.sh .
ARG project_name=pulse
COPY ./$project_name .
COPY ./artifacts/README.DOCKER.md ./README.md

ARG version
ARG gh_repository=bitcoin-sv/$project_name
ARG tag=${version:+v$version}
ENV VERSION=${version:-develop}
ENV TAG=${tag:-master}
ENV PRELOADED_DB_URL="https://raw.githubusercontent.com/${gh_repository}/${TAG}/data/blockheaders.csv.gz"

VOLUME ["/app/data"]

ENTRYPOINT ["./entrypoint.sh"]
